// Basic long option with a separate argument test
{
	"cmdline": {
		"options": {
			"foo": {
				"matches": ["foo"],
				"accepts_arguments": true
			}
		}
	},

	"tests": [
		{
			"argv": ["--foo", "bar"],
			"expects": {
				"arguments": {
					"foo": "bar"
				},
				"operands": []
			}
		}
	]
}
